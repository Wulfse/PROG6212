@model PROG6212.Models.ClaimsDashboardViewModel

@{
    ViewData["Title"] = "Claims Dashboard";
}

<h2>Claims Dashboard</h2>

<table>
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
            <tr>
                <td>@claim.ClaimID</td>
                <td>@claim.Status</td>
            </tr>
        }
    </tbody>
</table>